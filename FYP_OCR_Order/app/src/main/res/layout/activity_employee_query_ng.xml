<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Employee_Query_Ng"
    >

    <TextView
        android:id="@+id/textView5"
        android:layout_width="408dp"
        android:layout_height="45dp"
        android:text="Employee query data"
        android:textAlignment="center"
        android:textColor="@color/orange"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Employee_Name"
        android:layout_width="385dp"
        android:layout_height="53dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/textview_border2"
        android:hint="Employee_Name"
        android:textColor="@color/orange"
        android:textColorHint="@color/black"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/REGION"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/REGION"
        android:layout_width="331dp"
        android:layout_height="71dp"
        android:background="@drawable/textview_border2"
        android:hint="REGION"
        android:textColor="@color/orange"
        android:textColorHint="@color/black"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.36" />

    <EditText
        android:id="@+id/STATUS"
        android:layout_width="335dp"
        android:layout_height="81dp"
        android:layout_marginBottom="112dp"
        android:background="@drawable/textview_border2"
        android:hint="STATUS"
        android:textColor="@color/orange"
        android:textColorHint="@color/black"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/REGION"
        app:layout_constraintVertical_bias="0.069" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="413dp"
        android:layout_height="186dp"
        android:layout_marginBottom="88dp"
        android:text="Query result:"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/STATUS" />

    <ImageButton
        android:id="@+id/submit"
        android:layout_width="87dp"
        android:layout_height="82dp"
        android:background="@drawable/update"
        android:text="Update php"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.996" />


</androidx.constraintlayout.widget.ConstraintLayout>