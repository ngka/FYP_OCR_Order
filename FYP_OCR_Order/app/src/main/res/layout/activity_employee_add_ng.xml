<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".User_SendProblem_Ng"
    >

    <TextView
        android:id="@+id/textView5"
        android:layout_width="408dp"
        android:layout_height="45dp"
        android:text="Employee add data"
        android:textAlignment="center"
        android:textColor="@color/orange"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/value1"
        android:layout_width="384dp"
        android:layout_height="62dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/textview_border2"
        android:hint="Title"
        android:textColor="@color/orange"
        android:textColorHint="@color/black"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/value2"
        android:layout_width="349dp"
        android:layout_height="42dp"
        android:background="@drawable/textview_border2"
        android:hint="description_txt"

        android:textColor="@color/orange"
        android:textColorHint="@color/black"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.212" />

    <EditText
        android:id="@+id/value3"
        android:layout_width="343dp"
        android:layout_height="46dp"
        android:layout_marginBottom="136dp"
        android:background="@drawable/textview_border2"
        android:hint="month"
        android:textColor="@color/orange"
        android:textColorHint="@color/black"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.982" />

    <EditText
        android:id="@+id/value6"
        android:layout_width="343dp"
        android:layout_height="46dp"
        android:background="@drawable/textview_border2"
        android:hint="year"
        android:textColor="@color/orange"
        android:textColorHint="@color/black"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.544"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.683" />

    <EditText
        android:id="@+id/value5"
        android:layout_width="289dp"
        android:layout_height="48dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/textview_border2"
        android:hint="added_txt"
        android:textColor="@color/orange"
        android:textColorHint="@color/black"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/value4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/value4"
        android:layout_width="377dp"
        android:layout_height="48dp"
        android:background="@drawable/textview_border2"
        android:hint="day"
        android:textColor="@color/orange"
        android:textColorHint="@color/black"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/value6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.911"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.759" />

    <ImageButton
        android:id="@+id/submit"
        android:layout_width="87dp"
        android:layout_height="82dp"
        android:background="@drawable/update"
        android:text="Update php"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.996" />


</androidx.constraintlayout.widget.ConstraintLayout>