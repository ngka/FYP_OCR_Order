<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".EmployeePage_Ng"
        android:background="@drawable/baccc"
        >



        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/txtemployee"
            android:scaleType="centerCrop"
            android:layout_marginBottom="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Urgent Issue"
            android:textAlignment="center"
            android:textColor="#013220"
            android:textSize="30dp"/>

        <ImageView
            android:id="@+id/Data1"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:background="@drawable/imageback1"
            android:src="@drawable/urgent"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="50dp"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Non Urgent Issue"
            android:textAlignment="center"
            android:textColor="#013220"
            android:textSize="30dp"/>

        <ImageView
            android:id="@+id/Data"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/imgg"
            android:background="@drawable/imageback2"

            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="50dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="OCR scan text"
            android:textAlignment="center"
            android:textColor="#013220"
            android:textSize="30dp"/>

        <ImageView
            android:id="@+id/ocr"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/imageback3"
            android:src="@drawable/imgocr"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="50dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Query data"
            android:textAlignment="center"
            android:textColor="#013220"
            android:textSize="30dp"/>

        <ImageView
            android:id="@+id/Query"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/imgback4"
            android:src="@drawable/imgquery"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="50dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Update data"
            android:textAlignment="center"
            android:textColor="#013220"
            android:textSize="30dp"/>

        <ImageView
            android:id="@+id/Update"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/imageback2"
            android:src="@drawable/update"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="50dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Chat"
            android:textAlignment="center"
            android:textColor="#013220"
            android:textSize="30dp"/>

        <ImageView
            android:id="@+id/Chat"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/imageback2"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="50dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Find Location"
            android:textAlignment="center"
            android:textColor="#013220"
            android:textSize="30dp"/>

        <ImageView
            android:id="@+id/Search"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/imageback2"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="50dp"/>

    </LinearLayout>
</ScrollView>